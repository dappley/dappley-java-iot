<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_bg"
    android:orientation="vertical"
    tools:context=".WalletBtImportActivity">

    <include layout="@layout/toolbar_title_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/main_menu_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_8">

        <TextView
            android:layout_width="92dip"
            android:layout_height="wrap_content"
            android:text="@string/layout_wallet_name"
            android:textColor="@color/purple_title" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:layout_weight="1"
            android:textColor="@color/purple_txt"
            android:textIsSelectable="true"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_blue_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_menu_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_8"
        android:paddingRight="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_8">

        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_address"
            android:textColor="@color/purple_title" />

        <TextView
            android:id="@+id/bt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:textColor="@color/purple_txt"
            android:textIsSelectable="true"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_menu_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_8"
        android:paddingRight="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_8">

        <TextView
            android:layout_width="92dip"
            android:layout_height="wrap_content"
            android:text="@string/layout_wallet_address"
            android:textColor="@color/purple_title" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:textColor="@color/purple_txt"
            android:textIsSelectable="true"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_blue_dark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/line_blue_dark" />

    <LinearLayout
        android:id="@+id/linear_publickey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_menu_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_15"
        android:paddingTop="@dimen/margin_8"
        android:paddingRight="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_8">

        <TextView
            android:layout_width="92dip"
            android:layout_height="wrap_content"
            android:text="@string/bt_publickey"
            android:textColor="@color/purple_title" />

        <TextView
            android:id="@+id/tv_publickey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:textColor="@color/purple_txt"
            android:textIsSelectable="true"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dip"
        android:background="@color/main_menu_bg" />

    <Button
        android:id="@+id/btn_save"
        style="?borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="30dip"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@drawable/btn_blue_selector"
        android:text="@string/layout_encrypt_and_save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>